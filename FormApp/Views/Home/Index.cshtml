@model FormsApp.Models.ProductViewModel
@using FormsApp.Models 

@{
    ViewData["Title"] = "Ürün Listesi";
}

<div class="card card-body my-3">
    <form asp-action="Index" method="get">
        <div class="container">
            <div class="row">
                <div class="col-md-11">
                    <select name="category" class="form-select" asp-items="@(new SelectList(Model.Categories, "CategoryId", "Name", Model.SelectedCategory))">
                        <option value="0">Hepsi</option>
                    </select>
                </div> 
                <div class="col-md-1">
                    <button type="submit" class="btn btn-primary">Filtrele</button>
                </div>
            </div>
        </div>
    </form>
</div>

<form asp-action="EditProducts" method="post">
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th style="width:100px;">ID</th>
                <th style="width:100px;">Resim</th>
                <th>Ürün Adı</th>
                <th style="width:100px;">Fiyat</th>
                <th>Aktif mi?</th>
                <th style="width:130px;">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @for(var i = 0; i < Model.Products.Count; i++)
            {
                <tr>
                    <td>
                        @Model.Products[i].ProductId
                        <input type="hidden" name="Products[@i].ProductId" value="@Model.Products[i].ProductId" /> 
                    </td>
                    <td>
                        <img src="~/img/@Model.Products[i].Image" class="img-fluid" style="max-width: 50px;" />
                    </td>
                    <td>@Model.Products[i].Name</td>
                    <td>@Model.Products[i].Price</td>
                    <td>
                        <input type="checkbox" name="Products[@i].IsActive" value="true" @(Model.Products[i].IsActive ? "checked" : "") />
                        <input type="hidden" name="Products[@i].IsActive" value="false" />
                    </td>
                    <td>
                        <a href="/Home/Edit/@Model.Products[i].ProductId" class="btn btn-sm btn-primary">Edit</a>
                        <a href="/Home/Delete/@Model.Products[i].ProductId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button type="submit" class="btn btn-primary">Değişiklikleri Kaydet</button>
</form>